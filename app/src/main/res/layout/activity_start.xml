<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".startactivity.StartActivity"
        android:orientation="vertical"
>

    <android.support.v7.widget.Toolbar
            android:id="@+id/startToolbar"
            style="@style/Toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    />

    <android.support.design.widget.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true" app:srcCompat="@drawable/ic_direction_walk"
            android:id="@+id/follow_me" android:layout_marginEnd="10dp"
            android:layout_alignEnd="@+id/startMap" android:layout_marginTop="15dp"
            android:layout_below="@+id/my_location" android:focusable="true"
            app:backgroundTint="@color/textWhite"
            app:rippleColor="@color/colorAccent"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true" app:srcCompat="@drawable/ic_gps_fixed"
            android:id="@+id/my_location" android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" android:layout_marginTop="15dp"
            android:focusable="true"
            app:backgroundTint="@color/textWhite"
            app:rippleColor="@color/colorAccent"
            android:layout_below="@+id/startToolbar"/>

    <org.osmdroid.views.MapView
            android:id="@+id/startMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
    >
    </org.osmdroid.views.MapView>


</RelativeLayout>