<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="objectactivity.fragment.ObjectFragment"
              android:id="@+id/objectParent"
              android:background = "@color/textWhite"
>
<ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
    >
        <TextView
                android:id="@+id/objectName"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"
                  android:textSize="20sp"
                  android:textColor="@color/textDark"
                  android:textStyle="bold"
        />
        <TextView
                android:id="@+id/objectAddress"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:textColor="@color/textDark"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"

        />
        <TextView
                android:id="@+id/objectAlarm"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:textColor="@color/textDark"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"
        />

        <TextView
                android:id="@+id/objectAlarmTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/textDark"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"

        />
        <TextView
            android:id="@+id/objectAlarmApplyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/textDark"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/objectTimeToArrived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/textDark"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            />

        <TextView
                android:id="@+id/objectCustomer"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:textColor="@color/textDark"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"
        />
        <TextView
                android:id="@+id/objectTIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/textDark"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/textDark"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"

                android:textStyle="bold"
                android:visibility="gone"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:textColor="@color/textDark"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"
                  android:visibility="gone"
        />

        <Button
            android:id="@+id/button_send_arrived"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/sendArrived"
            android:textSize="16sp"
            android:backgroundTint="@color/button_reports_send"
            android:textColor="@color/text_button_report_send"
            android:enabled="false"
            />

        <Button
            android:id="@+id/button_send_reports"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/sendReports"
            android:textSize="16sp"
            android:backgroundTint="@color/button_reports_send"
            android:textColor="@color/text_button_report_send"
            android:enabled="false"
            />

    </LinearLayout>
</ScrollView>
</LinearLayout>