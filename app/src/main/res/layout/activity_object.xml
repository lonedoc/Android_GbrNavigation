<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".objectactivity.ObjectActivity"
        android:orientation="vertical"
        android:background="@color/textWhite"
>
    <androidx.appcompat.widget.Toolbar style="@style/Toolbar"
                                       android:id="@+id/toolbar_main_map"
                                       app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    />

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
    >
    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/objectMenu"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/textWhite"
            app:itemTextColor="@color/textWhite"
            android:background="@color/colorPrimaryDark"
            app:menu="@menu/object_menu"
    />


</LinearLayout>