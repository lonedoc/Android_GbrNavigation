<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="kobramob.rubeg38.ru.gbrnavigation.objectactivity.TabFragment">


    <android.support.design.widget.TabLayout
            android:id="@+id/testTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textWhite"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabIconTint="@color/colorAccent"
    >

        <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_object"/>

        <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_responsible"
        />

        <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_plan"/>
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager android:layout_width="match_parent"
                                       android:layout_height="match_parent"
    android:id="@+id/pager">

    </android.support.v4.view.ViewPager>

</LinearLayout>