<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="newVersion.main.MainActivity"
        android:gravity="center"
>
    <ImageView
            android:id="@id/main_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/portrait_normal_icon"
            android:contentDescription="@string/portrait_icon"
            android:visibility="invisible"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/main_progressBar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Material.ProgressBar.Large"
            android:id="@+id/main_progressBar" app:layout_constraintTop_toBottomOf="@+id/main_icon"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="@+id/main_icon"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/main_icon"
            android:visibility="invisible"
    />
    <TextView
            android:id="@+id/textView"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/main_progressBar" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_progressBar"
            app:layout_constraintEnd_toEndOf="@+id/main_progressBar"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
    />


</androidx.constraintlayout.widget.ConstraintLayout>