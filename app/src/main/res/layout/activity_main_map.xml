<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <android.support.v7.widget.Toolbar style="@style/Toolbar"
                                       android:id="@+id/toolbar_main_map"
                                       app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    />
    <android.support.design.widget.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true" app:srcCompat="@drawable/ic_direction_walk"
            android:id="@+id/follow_me" android:layout_marginEnd="10dp"
            android:layout_alignEnd="@+id/main_map" android:layout_marginTop="15dp"
            android:layout_below="@+id/my_location" android:focusable="true"
            app:backgroundTint="@color/textWhite"
            app:rippleColor="@color/colorAccent"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true" app:srcCompat="@drawable/ic_gps_fixed"
            android:id="@+id/my_location" android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" android:layout_marginTop="15dp"
            android:focusable="true"
            app:backgroundTint="@color/textWhite"
            app:rippleColor="@color/colorAccent"
            android:layout_below="@+id/toolbar_main_map"/>

    <org.osmdroid.views.MapView
            android:layout_marginTop="?attr/actionBarSize"
            android:id="@+id/main_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    >
    </org.osmdroid.views.MapView>

</RelativeLayout>